<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<ResponsivePopover id="leaveTypeDescriptionPopover" showHeader="true" title="{create>/AbsenceTypeName}" showCloseButton="true">
		<content>
			<f:SimpleForm id="absenceDescriptionPhoneForm" title="" editable="true" layout="ResponsiveGridLayout" labelSpanXL="-1" emptySpanXL="-1"
				columnsXL="-1" labelSpanL="3" emptySpanL="4" columnsL="1" labelSpanM="3" emptySpanM="4" columnsM="1" labelSpanS="12" emptySpanS="0"
				adjustLabelSpan="false" singleContainerFullSize="false">
				<f:content>
					<Label id="absDescLabelPhone" required="false" text="{i18n>leaveTypeDescription}" labelFor="absDescTextPhone"/>
					<FormattedText id="absDescTextPhone" htmlText="{create>/AbsenceDescription}"/>
				</f:content>
			</f:SimpleForm>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>